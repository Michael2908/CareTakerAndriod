<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.caretaker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/AppTheme">
        <activity android:name=".AddDinner"></activity>
        <activity android:name=".AddLunch" />
        <activity android:name=".AddBreakfast" />
        <activity android:name=".PillSchedule" />
        <activity android:name=".SetEmergencyCall" />
        <activity android:name=".FoodMenu" />
        <activity android:name=".HealthCondition" />
        <activity android:name=".MainMenu" />
        <activity android:name=".Register" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />


    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
         />

</manifest>