<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".HealthCondition">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="1000dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="400dp"
        app:srcCompat="@drawable/bloodpressure" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="700dp"
        app:srcCompat="@drawable/temperature" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="550dp"
        app:srcCompat="@drawable/bloodsugar" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="250dp"
        app:srcCompat="@drawable/condition"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="450dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="270dp"
        android:text="Bpm" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="450dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="570dp"
        android:text="mmHg" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="450dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="420dp"
        android:text="mg/dL" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="450dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="720dp"
        android:text="‎°C" />

    <EditText
        android:id="@+id/heartRate"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="00" />

    <EditText
        android:id="@+id/bloodPressure"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="400dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="0/0" />

    <EditText
        android:id="@+id/bloodSugar"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="550dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="00" />

    <EditText
        android:id="@+id/temperature"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="700dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="0.0" />

    <Button
        android:id="@+id/update"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="880dp"
        android:textSize="30sp"
        android:background="@drawable/background_blue"
        android:fontFamily="serif"
        android:textColor="@color/cardview_light_background"
        android:text="Update" />


</RelativeLayout>